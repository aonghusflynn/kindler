<div class="row">
	<% unless @kindles.empty? -%>
		<% for kindle in @kindles %>
			<div class="panel krindle">
				<h3><%= kindle.name %></h3>
				<p>
					<%= link_to "Go to the Kris Kindle", url_for(kindle), class:"button small" %>
				</p>
			</div>
		<% end %>
	<% else -%>
		<h3>Hey, you are not in a Kris Kindle, why not set one up?</h3>
		<%= link_to 'Create a new Krindle', '/krindles/new', {:class=>"button medium round"} %>
	<% end -%>
</div>
