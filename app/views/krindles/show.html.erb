<div ng-app="friendsApp">

<p id="notice"><%= notice %></p>

<input ng-model="query" placeholder="Add someone"  />

<div ng-controller="MainCtrl" class="row">
	<div class="small-4 columns">
		<div ng-repeat="friend in friends | filter:query">
			<div class="panel">
				<img src="{{friend.picture.data.url}}"/>
				<p class="right clearfix">{{friend.name}}</p>
				<p class="right"><a href="" ng-click="addToKindle(friend)">Add</a></p>
			</div>
		</div>
	</div>
	<div class="small-4 columns">
		<div ng-repeat="friend in friendsInKindle">
			<div class="panel">
				<img src="{{friend.picture.data.url}}"/>
				<p class="right">{{friend.name}}</p>
				<p class="right"><a href="" ng-click="removeFromKindle(friend)">Remove</a></p>
			</div>
		</div>
	</div>
	
</div>


<%= link_to 'Edit', edit_krindle_path(@krindle) %> |
<%= link_to 'Back', krindles_path %>
</div>