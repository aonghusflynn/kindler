<div ng-app="friendsApp">

<p id="notice"><%= notice %></p>

<input ng-model="query" placeholder="Add someone"  />

<div ng-controller="MainCtrl" ng-init="init('<%= @krindle.id %>')" class="row">
	<div class="small-5 columns friends-list">
		<div ng-repeat="friend in friends | filter:query | orderBy:name">
			<div class="panel friend">
				<img src="{{friend.picture}}" class="left" />
				<strong class="left clearfix">{{friend.name}}</strong>
				<a href="" ng-click="addToKindle(friend)" class="button success small right">Add</a>
			</div>
		</div>
	</div>
	<div class="small-5 columns friends-list">

		<div ng-repeat="friend in friendsInKindle">
			<div class="panel friend">
				<img src="{{friend.picture}}"/>
				<strong class="left">{{friend.name}}</strong>
				<a href="" ng-click="removeFromKindle(friend)" class="button alert small right">Remove</a>
			</div>
		</div>
		
		<div ng-show="hasFriends">
			<a href="" ng-click="saveToKindle('<%= @krindle.id %>')" class="button small success">Save</a>
		</div>
	</div>
	
</div>


<%= link_to 'Edit', edit_krindle_path(@krindle) %> |
<%= link_to 'Back', krindles_path %>
</div>